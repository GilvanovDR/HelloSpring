<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!-- loggers -->
    <bean id="consoleEventLogger" class="HelloSpring.Loggers.ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="HelloSpring.Loggers.FileEventLogger" init-method="init">
        <constructor-arg value="log.txt"/>
    </bean>
    <bean id="cacheFileLogger" class="HelloSpring.Loggers.CacheFileLogger" destroy-method="destroy"  parent="fileEventLogger">
        <constructor-arg value="3"/>
    </bean>
    <bean id="combinedEventLogger" class="HelloSpring.Loggers.CombinedEventLogger">

        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>
</beans>