<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- loggers -->
    <bean id="eventLogger" class="HelloSpring.Loggers.ConsoleEventLogger"/>
    <bean id="fileLogger" class="HelloSpring.Loggers.FileEventLogger" init-method="init">
        <constructor-arg value="log.txt"/>
    </bean>
    <bean id="cacheFileLogger" class="HelloSpring.Loggers.CacheFileLogger" destroy-method="destroy"  parent="fileLogger">
        <constructor-arg value="3"/>
    </bean>
</beans>